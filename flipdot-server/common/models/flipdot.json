{
  "name": "Flipdot",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "certificateSerial": {
      "type": "string",
      "required": true
    },
    "mqttChannel": {
      "type": "string",
      "required": true
    },
    "boardHeight": {
      "type": "number",
      "required": true
    },
    "hardwareRevision": {
      "type": "string",
      "required": true
    },
    "softwareVersion": {
      "type": "string",
      "required": true
    },
    "lastOnline": {
      "type": "date"
    },
    "isRunning": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "hasOne",
      "model": "FlipdotUser",
      "foreignKey": ""
    },
    "applicationQueueItems": {
      "type": "hasMany",
      "model": "FlipdotApplicationQueueItem",
      "foreignKey": ""
    },
    "applicationInstances": {
      "type": "hasMany",
      "model": "FlipdotApplicationInstance",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
